  <h1>Property Create form</h1>
  <div class=row>
    <div id="div01" class="form-group col-xl-6 col-12">
      <label>Property title:</label>
      <input type="text" class="form-control" name="Estate[title]" required>
    </div>

    <div id="div02" class="form-group col-xl-6 col-12">
      <label>Image URL:</label>
      <input type="url" class="form-control" name="Estate[image]" required>
    </div>

    <div id="div03" class="form-group col-xl-6 col-12">
      <label>Estate:</label>
      <select onchange="EstateSelected(this.value)" class="form-control" name="Estate[name]">
        <option value="">Select estate here</option>
        <option value="Festival City">Festival City</option>
        <option value="Tin Ma Court">Tin Ma Court</option>
        <option value="City One Shatin">City One Shatin</option>
      </select>
    </div>

    <div id="div04" class="form-group col-xl-6 col-12">
      <label>Bedrooms:</label>
      <input type="number" class="form-control" name="Estate[bedrooms]" min="0" required>
    </div>

    <div id="div05" class="form-group col-xl-6 col-12">
      <label>Gross Area:</label>
      <input type="number" class="form-control" name="Estate[area]" min="0" required>
    </div>

    <div id="div06" class="form-group col-xl-6 col-12">
      <label>Expected Tenants:</label>
      <input type="number" class="form-control" name="Estate[tenants]" min="0" required>
    </div>

    <div id="div07" class="form-group col-xl-6 col-12">
      <label>Rent:</label>
      <input type="number" class="form-control" name="Estate[rent]" min="0" required>
    </div>

    <div id="div08" class="form-group col-xl-6 col-12">
      <form action="/action_page.php">
        <input type="checkbox" name="Estate[highlighted]" onClick="Check(document.myform.highlighted)"> Highlighted Property<br><br>
      </form>

      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>

</form>