  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">



      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link active" href="http://localhost:1337/estate/">Home <span
              class="sr-only">(current)</span></a>
              <a class="nav-item nav-link <%= req.path == "/estate/create#" ? "active" : " " %>"
                href="http://localhost:1337/estate/paginate">Search</a>




          <%  if (req.session.role == "admin") {%>
          <a class="nav-item nav-link <%= req.path == "/estate/create#" ? "active" : " " %>"
            href="http://localhost:1337/estate/create#">Create</a>
          <a class="nav-item nav-link" href="http://localhost:1337/estate/admin">Admin</a>
          <%}%>


          <%  if (req.session.role == "client") {%>
          <a class="nav-item nav-link" href="http://localhost:1337/user/populate">My Rentals</a>

          <%}%>

         

        </div>

      </div>

      <div style="text-align:right; color: black;">
      <%  if (req.session.role != undefined) {%>
          Hi,
          <%=req.session.username %>.&nbsp;
          <a style="color: black;" href="/user/logout">(Logout)</a>
          <%} else{%>
          <a style="color: black;" href="/user/login">(Login)</a> </div>
        <%} %>


    </nav>

    <div class="jumbotron jumbotron-fluid">
